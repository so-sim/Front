{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM",
      "ES2021.String"
    ],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/svg.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}