{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx", "types/svg.d.ts", "../stories/Introduction.stories.mdx", "../stories/*.stories.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}
